.menu-item
  a
    background-color #fff
    border-width 0
    display block
    color #333
    font-size inherit
    line-height 40px
    max-height 40px
    margin 0
    outline none
    padding 0px 28px
    position relative
    text-align left
    text-decoration none
    width 100%
    z-index 1
    -webkit-transition 0.2s linear
    -webkit-transition-property max-height, background-color
    -moz-transition 0.2s linear
    -moz-transition-property max-height, background-color
    transition 0.2s linear
    transition-property max-height, background-color

.menu-item.ng-hide
  a
    max-height 0

.menu-item:hover, .menu-item:focus
  a
    color #999

.menu-item.menu-title
  a
    color #888
    font-size 16px
    padding-left 16px
    text-align left
    text-transform uppercase

.menu-item.menu-sub-item
  a
    cursor pointer
  a.active
    background-color #eeeeee
    font-weight bold
    color #4285f4

.menu-item.menu-logout
  a
    cursor pointer

.menu-item.menu-title.active
  a
    font-weight bold

