md-toolbar
  .md-toolbar-tools
    h2(ng-bind='::title|translate')

md-content(ng-style='contentStyle')
  div.schema-form(ng-submit='submit()' infinite-scroll='loadMore()' infinite-scroll-distance='2')
    schema-item(ng-repeat='key in schema.keyOrder' schema='schema.properties[key]' entity='entity' errors='errors')

    section.schema-form-controls(layout='horizontal' layout-align='center')
      md-button.md-raised.md-primary(ng-bind='::"Submit"|translate' ng-click='submit()' aria-label='{{::"Submit"|translate}}')
      md-button(ng-bind='::"Cancel"|translate' ng-click='cancel()' aria-label='{{::"Cancel"|translate}}')

